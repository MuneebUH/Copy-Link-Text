{
  "manifest_version": 3,
  "name": "Copy Link Text",
  "version": "1.0",
  "description": "Quickly copy the visible text of any link via right-click. Simple, fast, and works on any website.",
  "permissions": [
    "contextMenus",
    "scripting",
    "tabs",
    "clipboardWrite"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  }
}
